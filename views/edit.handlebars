<form class="editBlogPost" data-id={{post.id}}>
  <div class="form-group">
    <label for="postTitle">Post Title</label>
    <input type="text" class="form-control" id="postTitle" value="{{post.title}}" placeholder="Enter post title...">
  </div>
  <div class="form-group">
    <label for="postBody">Post Body</label>
    <textarea class="form-control" id="postBody" rows="3">{{post.body}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary">Post</button>
  <button class="btn btn-secondary" id="clearBtn">Clear</button>
</form>

<script src="/js/edit-post.js"></script>